{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compile Java",
        "type": "shell",
        "command": "javac",
        "args": [
          "-d",
          "bin",
          "-cp",
          "lib/*",
          "-sourcepath",
          "src/main/java",
          "$(find src/main/java -name '*.java')"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$javac"]
      }
    ]
  }
  